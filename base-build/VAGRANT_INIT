vagrant init chef/centos-6.6
vagrant up

# https://github.com/mitchellh/vagrant/issues/1657

wget http://download.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
sudo rpm -ivh epel-release-6-8.noarch.rpm

sudo yum install kernel-devel-$(uname -r) kernel-headers-$(uname -r) dkms perl -y
sudo yum update -y
sudo /etc/init.d/vboxadd setup

sudo yum clean all

# copy this to .ssh/authorized_keys
# https://raw.githubusercontent.com/mitchellh/vagrant/master/keys/vagrant.pub

sudo poweroff

vagrant package --base NAME_OF_IMAGE
